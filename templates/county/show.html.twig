{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}


    {% for traobject in county.traobject  %}


        <div class="container">
        <h1>Objet du d√©partement : {{ county.label }}</h1>
        <div class="card object-card">
            <h1 class="card-header">
                <span class="badge badge-primary badge-found">
                    <i class="fa fa-map-pin"></i>
                    {{ traobject.state.label }}
                </span>
                {{ traobject.title }}
            </h1>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/') ~ traobject.picture }}" class="img-thumbnail" alt="{{ traobject.title }}">
                    </div>
                    <div class="col-md-8">
                        <p>{{ traobject.description }}</p>
                    </div>
                </div>
            </div>

            <footer class="card-footer">
                <ul class="object-features">
                    <li><a href="#" class="badge" style="background-color: #dc143c;"><i class="fa fa-money"></i>{{ traobject.category.label }}</a></li>
                    <li><a href="#" class="badge badge-info"><i class="fa fa-calendar"></i>{{ traobject.eventAt|date("d m y") }}</a></li>
                    <li><a href="#" class="badge badge-info"><i class="fa fa-map-marker"></i>{{ traobject.city }}</a></li>
                </ul>
            </footer>
        </div>

    {% endfor %}

{% endblock %}